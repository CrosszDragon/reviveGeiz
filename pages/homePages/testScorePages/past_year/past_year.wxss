/* past_year/past_year.wxss */
@import "../index.wxss";
.drop_down_menu{
  display: flex;
  flex-direction: column;
}
.drop_down_menu .drop_down_button{
  width: 100%;
  display: inline-flex;
  flex-direction: row;
  padding: 10rpx;
  justify-content:space-around;
  border: 2rpx solid gainsboro;
}
.drop_down_button image{
  width: 40rpx;
  height: 40rpx;
  margin: 10rpx;
}

/*隐藏内容*/
.drop_down_menu .last_grade{
  display: none;
}

/*表格*/
.grade_info{
  width: 100%;
  height: 578rpx;
  overflow-y: scroll; 
}
/* 表格代码   */
.table{
  border:1px solid #dadada;
  border-right:0;
  border-bottom: 0;
  width: 98%;
  margin-left: 1%;
}
.tr{
  width:100%;
  display: flex;
  justify-content: space-between;
}
.th,.td{
  padding: 10px;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  text-align: center;
  width: 100%;
}
.th1,.th2,th3,th4,th5,.td1,td2,td3,td4,td5{
  width:20%;
}

.th{
  font-weight: 800;
  background-color: #f7d84e;
  font-size: 40rpx;
  color: #330e0e;
}
.td{
  font-size: 35rpx;
  color: #383534;
}
/*end-表格*/