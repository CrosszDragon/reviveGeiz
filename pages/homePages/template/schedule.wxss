/*课表*/
.schedule{
  background-color: pink;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-grow: 1;
  margin-bottom: 3rpx;
  margin-top: 3rpx;
}
.schedule .index{
  background-color:orchid;
  padding: 50rpx 30rpx 50rpx 30rpx;
  font-weight: 800;
  font-size: 35rpx;
}
.schedule .sche_content{
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex-grow: 1;
  text-align: center;
}
.sche_content .content_bottom{
  display: inline-flex;
  flex-direction: row;
  justify-content: space-between;
  flex-grow: 1;
}
.content_bottom .bottom_item{
  padding: 15rpx;
  border:3rpx solid ghostwhite;
}
/*end-课表*/